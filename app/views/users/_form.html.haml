= form_for @user do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :approved
    %br
    = f.check_box :approved
  %p
    = f.label :message
    %br
    = f.text_area :message
  %p
    = f.submit
